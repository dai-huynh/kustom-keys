extends ../layout

block content
  h1= title

  form(method="POST", action="")
    .form-group
    label(for="name") Brand:
    input#name.form-control(
      type="text",
      name="name",
      value=undefined === brand ? "" : brand.name,
      required="true"
    )
    button.btn.btn-primary(type="submit") Submit

  if errors
    ul
      each error in errors
        li!= error.msg
