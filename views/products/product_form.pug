extends ../layout

block content
  h1= title

  form(method="POST", action="", enctype="multipart/form-data")
    .form-group
      label(for="name") Product Name:
      input#name.form-control(
        type="text",
        placeholder="Name of product",
        name="name",
        required="true",
        value=undefined === product ? "" : product.name
      )
    .form-group
      label(for="price") Price: $
      input#price.form-control(
        type="number",
        name="price",
        step="0.01",
        required="true",
        value=undefined === product ? "" : product.price.toString()
      )
    .form-group
      label(for="details") About the Product:
      textarea#details.form-control(
        type="textarea",
        name="details",
        required="true"
      ) #{ undefined === product ? "" : product.details }
    .form-group
      label(for="brands") Brands:
      select#brands.form-control(
        type="select",
        placeholder="Select brand",
        name="brand",
        required="true"
      )
        each brand in brands
          option(value=brand._id, selected=brand.selected) #{ brand.name }
    .form-group
      label Categoires:
      div
        each category in categories
          input.radio-input(
            type="radio",
            name="category",
            id=category._id,
            value=category._id,
            checked=category.checked
          )
          label(for=category._id) #{ category.name }

    .form-group
      label(for="product_image") Image (optional):
      input#image.form-control(type="file", name="product_image")

    button.btn.btn-primary(type="submit") Submit

  if errors
    ul
      each error in errors
        li!= error.msg
